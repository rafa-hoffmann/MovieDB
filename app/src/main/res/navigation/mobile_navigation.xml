<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.moviedb.ui.movies.MovieListFragment"
        android:label="@string/menu_movies"
        tools:layout="@layout/fragment_movies">
        <action
            android:id="@+id/show_item_detail"
            app:destination="@id/item_detail_fragment" />
    </fragment>

    <fragment
        android:id="@+id/item_detail_fragment"
        android:name="com.example.moviedb.ui.movies.MovieDetailsFragment"
        android:label="@string/details"
        tools:layout="@layout/fragment_movie_detail">
        <argument
            android:name="movie"
            android:defaultValue="@null"
            app:argType="com.example.moviedb.models.Movie" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.moviedb.ui.movies.MovieListFragment"
        android:label="@string/menu_fav"
        tools:layout="@layout/fragment_movies" />
</navigation>